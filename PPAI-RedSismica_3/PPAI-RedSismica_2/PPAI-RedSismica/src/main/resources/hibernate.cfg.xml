<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de la base de datos H2 -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./data_new/redsismica;AUTO_SERVER=TRUE;DB_CLOSE_ON_EXIT=TRUE</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialecto de H2 -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Mostrar SQL en consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Actualizar esquema automáticamente -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Pool de conexiones -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- Mapeo de entidades -->
        <mapping class="org.example.models.Rol"/>
        <mapping class="org.example.models.Empleado"/>
        <mapping class="org.example.models.Usuario"/>
        <mapping class="org.example.models.Sesion"/>
        <mapping class="org.example.models.EstacionSismologica"/>
        <mapping class="org.example.models.Sismografo"/>
        <mapping class="org.example.models.CambioEstado"/>
        <mapping class="org.example.models.OrdenInspeccion"/>
        <mapping class="org.example.models.MotivoFueraServicio"/>
    </session-factory>
</hibernate-configuration>
